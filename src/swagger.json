          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Promotion ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Promotion deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
