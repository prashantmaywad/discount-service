                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Promotion"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Promotion not found"
          }
        }
      },
      "put": {
        "summary": "Update a promotion",
        "tags": [
          "Promotions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Promotion ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  },
                  "eligibleProductCategories": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "eligibleProductIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "discountType": {
                    "type": "string",
                    "enum": [
                      "percentage",
                      "fixed"
                    ]
                  },
                  "discountValue": {
                    "type": "number"
                  },
                  "expirationDate": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "usageLimit": {
                    "type": "integer"
                  },
                  "isActive": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Promotion updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
